{
  "name": "stay-points-backend",
  "version": "1.0.0",
  "description": "Backend for the StayPoint extended stay application",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch": "concurrently -k -p '[{name}]' -n 'TypeScript,Node' -c 'yellow.bold,cyan.bold,green.bold' 'npm run watch-ts' 'npm run watch-node'",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "test": "jest --forceExit --coverage --verbose"
  },
  "author": "Chris Rocco",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "joi": "^13.3.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.0",
    "concurrently": "^3.5.1",
    "jest": "^22.4.3",
    "nodemon": "^1.17.4",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
